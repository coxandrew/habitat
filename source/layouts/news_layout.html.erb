<!doctype html>
<html>
  <%= partial "head" %>

  <body class="<%= page_classes %>">
    <%= partial "header" %>

    <div class="main container">
      <div class="row">
        <div class="span3">
          <aside>
            <h2>Recent Articles</h2>
            <ul>
              <% blog.articles[0...10].each do |article| %>
                <li>
                  <%= link_to article.title, article %>
                  <span class="date">&middot; <%= article.date.strftime('%b %e') %></span>
                </li>
              <% end %>
            </ul>
          </aside>
        </div>

        <div class="span9">
          <% if current_article.present? %>
            <%= partial :news_title, locals: { current_article: current_article } %>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>

    <%= partial "footer" %>
  </body>
</html>
