<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Powhatan - Habitat for Humanity" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial "header" %>

    <div class="main container">
      <div class="row">
        <div class="span3">
          <aside>
            <h2>Recent Articles</h2>
            <ul>
              <% blog.articles[0...10].each do |article| %>
                <li>
                  <%= link_to article.title, article %>
                  <span class="date"><%= article.date.strftime('%b %e') %></span>
                </li>
              <% end %>
            </ul>
          </aside>
        </div>
        <div class="span9">
          <h2><%= current_article.title %></h2>
          <div class="byline">
            <span class="date"><%= current_article.date.strftime('%B %e %Y') %></span>
            &middot;
            <span class="author"><%= current_article.data.author %></span>
          </div>

          <%= yield %>
        </div>
      </div>
    </div>

    <%= partial "footer" %>
  </body>
</html>
