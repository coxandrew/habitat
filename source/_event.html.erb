<% image ||= nil %>
<div class="event clearfix">
  <div class="calendar">
    <div class="header"></div>
    <div class="month"><%= month %></div>
  </div>

  <div class="event-title"><%= title %></div>
  <div class="event-details"><%= details %></div>
  <% if image.present? %>
    <%= image_tag image, class: 'img-polaroid pull-right' %>
  <% end %>
</div>
